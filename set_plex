
# Install Plex
RUN echo "deb http://shell.ninthgate.se/packages/debian wheezy main" > /etc/apt/sources.list.d/plexmediaserver.list && \
    curl http://shell.ninthgate.se/packages/shell-ninthgate-se-keyring.key | apt-key add - && \
    apt-get -q update && \
    apt-get install -qy --force-yes plexmediaserver && \
    apt-get -y autoremove && \
    apt-get -y clean && \
    rm -rf /var/lib/apt/lists/* && \
    rm -rf /tmp/*

#Supervisor
ADD echo "[program:plex]" >> /etc/supervisor/conf.d/supervisord.conf
ADD echo "command=/usr/sbin/start_pms" >> /etc/supervisor/conf.d/supervisord.conf
ADD echo "environment=HOME="/config"" >> /etc/supervisor/conf.d/supervisord.conf
ADD echo "stdout_logfile=/config/logs/supervisor/%(program_name)s.log" >> /etc/supervisor/conf.d/supervisord.conf
ADD echo "stderr_logfile=/config/logs/supervisor/%(program_name)s.log" >> /etc/supervisor/conf.d/supervisord.conf
ADD echo "autostart=true" >> /etc/supervisor/conf.d/supervisord.conf
ADD echo "autorestart=true" >> /etc/supervisor/conf.d/supervisord.conf

#Mappings and ports
VOLUME ["/config", "/transcode"]
EXPOSE 32400

